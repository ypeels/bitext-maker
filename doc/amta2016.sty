%% overall definition of maketitle, @maketitle does the real work
\def\maketitle{\par
\vspace*{-0.625in}\linewidth\hsize \toptitlebar 
 \begingroup
   \def\thefootnote{\fnsymbol{footnote}}
   \def\@makefnmark{\hbox to 0pt{$^{\@thefnmark}$\hss}}
   \@maketitle \@thanks
 \endgroup
 \setcounter{footnote}{0}
 \let\maketitle\relax \let\@maketitle\relax
 \gdef\@thanks{}\gdef\@author{}\gdef\@title{}\let\thanks\relax}

\def\@startauthor{\flushleft \normalsize}
\def\@endauthor{}
\def\@maketitle{\vbox{\hsize\textwidth
 \linewidth\hsize \vskip \beforetitskip
 {\begin{center} \LARGE\bf \@title \end{center}} \vskip \aftertitskip
 {\def\and{\unskip\enspace{\rm and}\enspace}%
  \def\addr{\normalsize}%
  \def\name{\large}%
  \def\AND{\@endauthor\rm\hss \vskip \interauthorskip \@startauthor}
  \@startauthor \@author \@endauthor}
  \vskip \aftermaketitskip
\bottomtitlebar \vskip 0.1in plus 2fil minus 0.1in 
}}

